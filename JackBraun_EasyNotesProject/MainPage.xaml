<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JackBraun_EasyNotesProject.MainPage"
             Title="EasyNotes">

    <Grid BackgroundColor="#032936"
      VerticalOptions="FillAndExpand"
      HorizontalOptions="FillAndExpand"
      RowDefinitions="*,*,*,*,*,*"
      ColumnDefinitions="*"
      RowSpacing="60"
      ColumnSpacing="6"
      Padding="20">

        <Label Text="Easy Notes"
            TextColor="White"
            FontSize="40"
            FontAttributes="Bold"
            Grid.ColumnSpan="4"
            HorizontalOptions="Center"/>

        <ListView x:Name="Lv" 
        FlexLayout.Grow="1" 
        HasUnevenRows="True" 
        BackgroundColor="#f5f4cb" 
        Grid.Row="2" 
        HeightRequest="300" 
        ItemTapped="Lv_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding NoteTitle}"
                  FontSize="20"
                  FontAttributes="Bold"/>
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Label Grid.Column="0" Text="{Binding NoteContent}"/>
                            </Grid>
                        </VerticalStackLayout>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button BackgroundColor="#47adba"
            Text="New"
            TextColor="Black"
            FontSize="12"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HeightRequest="40"
            WidthRequest="150"
            CornerRadius="60"
            Clicked="NewButtonClicked"
            />

        <Button BackgroundColor="#47adba"
            Text="About"
            TextColor="Black"
            FontSize="12"
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HeightRequest="40"
            WidthRequest="150"
            CornerRadius="60"
            Clicked="AboutButtonClicked"/>
    </Grid>
</ContentPage>

