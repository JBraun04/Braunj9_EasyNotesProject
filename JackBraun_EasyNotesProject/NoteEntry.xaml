<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JackBraun_EasyNotesProject.NoteEntry"
             Title="NoteEntry">
    <Grid BackgroundColor="#032936"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand"
          RowDefinitions="*,*,*,*,*"
          RowSpacing="60"
          ColumnSpacing="6"
          Padding="20">

        <Label Text="Note Entry"
        TextColor="White"
        FontSize="40"
        FontAttributes="Bold"
        Grid.ColumnSpan="4"
        HorizontalOptions="Center"/>

        <Entry BackgroundColor="#f5f4cb"
        Text="[Enter Note Title]"
        HeightRequest="50"
        Grid.Row="1"/>

        <Entry BackgroundColor="#f5f4cb"
        Text="[Enter Note Text]"
        HeightRequest="50"
        Grid.Row="2"/>

        <Label BackgroundColor="#f5f4cb"
        Text="[Full Note Here]"
        HeightRequest="200"
        Grid.Row="3"/>

        <Button BackgroundColor="#47adba"
        Text="Save Note"
        TextColor="Black"
        FontSize="12"
        Grid.Row="4"
        HeightRequest="40"
        WidthRequest="150"
        CornerRadius="60"/>
    </Grid>
</ContentPage>