<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JackBraun_EasyNotesProject.MainPage"
             Title="EasyNotes">

    <Grid BackgroundColor="#032936"
      VerticalOptions="FillAndExpand"
      HorizontalOptions="FillAndExpand"
      RowDefinitions="*,*,*,*,*,*"
      ColumnDefinitions="*,*,*,*"
      RowSpacing="60"
      ColumnSpacing="6"
      Padding="20">

        <Label Text="Easy Notes"
            TextColor="White"
            FontSize="40"
            FontAttributes="Bold"
            Grid.ColumnSpan="4"
            HorizontalOptions="Center"/>

        <Button BackgroundColor="#a8a37b"
            Text="[Untitled Note]"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            TextColor="Black"/>

        <Button BackgroundColor="#a8a37b"
            ImageSource="createnew.png"
            Grid.Row="1"
            Grid.Column="3"/>

        <Button BackgroundColor="#a8a37b"
            Text="[Untitled Note]"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            TextColor="Black"/>

        <Button BackgroundColor="#a8a37b"
            ImageSource="createnew.png"
            Grid.Row="2"
            Grid.Column="3"/>

        <Button BackgroundColor="#a8a37b"
            Text="[Untitled Note]"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            TextColor="Black"/>

        <Button BackgroundColor="#a8a37b"
            ImageSource="createnew.png"
            Grid.Row="3"
            Grid.Column="3"/>

        <Button BackgroundColor="#a8a37b"
            Text="[Untitled Note]"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            TextColor="Black"/>

        <Button BackgroundColor="#a8a37b"
            ImageSource="createnew.png"
            Grid.Row="4"
            Grid.Column="3"/>

        <Button BackgroundColor="#47adba"
            Text="About the app"
            TextColor="Black"
            FontSize="12"
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HeightRequest="40"
            WidthRequest="150"
            CornerRadius="60"/>
    </Grid>
</ContentPage>

